---
type Props = {
  meta: { name: string; role: string; valueStatement: string; location: string };
  hero: { eyebrow: string[]; intro: string[]; current: string; previous: string[] };
};

const { meta, hero } = Astro.props;
---

<section class="pt-16 sm:pt-20">
  <div class="mx-auto max-w-[var(--content)] px-4 sm:px-6">
    <div class="relative overflow-hidden rounded-[var(--radius-lg)] border border-[rgb(var(--hairline))] bg-[rgb(var(--surface))] shadow-[var(--shadow)]">
      <div class="pointer-events-none absolute inset-0">
        <div
          class="absolute inset-0 opacity-[0.05] [background-image:linear-gradient(to_right,rgb(var(--hairline))_1px,transparent_1px),linear-gradient(to_bottom,rgb(var(--hairline))_1px,transparent_1px)] [background-size:28px_28px]"
        />
        <div class="absolute -top-24 -right-28 h-64 w-64 rounded-full blur-3xl opacity-30"
          style={`background: radial-gradient(circle at 30% 30%, rgb(var(--accent)) 0%, transparent 60%)`}
        />
      </div>

      <div class="relative px-5 py-6 sm:px-8 sm:py-8">
        <div class="flex flex-wrap items-center gap-2 text-xs">
          <span class="font-mono tracking-[0.22em] text-[rgb(var(--muted))]">STATUS</span>
          <span class="inline-flex items-center gap-2 rounded-full border border-[rgb(var(--hairline))] bg-[rgb(var(--surface-2))] px-2.5 py-1 text-[rgb(var(--ink))]">
            <span class="h-1.5 w-1.5 rounded-full" style={`background: rgb(var(--accent))`} aria-hidden="true" />
            {hero.current || meta.role}
          </span>
          {meta.location ? (
            <span class="inline-flex items-center gap-2 rounded-full border border-[rgb(var(--hairline))] bg-[rgb(var(--surface-2))] px-2.5 py-1 text-[rgb(var(--muted))]">
              <span class="font-mono text-[10px] text-[rgb(var(--muted))]" aria-hidden="true">LOC</span>
              {meta.location}
            </span>
          ) : null}
        </div>

        <div class="mt-6 grid gap-6 sm:grid-cols-[1.25fr_0.75fr] sm:items-start">
          <div>
            <p class="font-mono text-sm sm:text-base tracking-[0.18em] text-[rgb(var(--muted))]">
              {meta.name}
            </p>
            <h1 class="mt-3 font-serif text-[clamp(2.25rem,5vw,3.25rem)] leading-[1.05] text-[rgb(var(--ink))]">
              {meta.valueStatement}
            </h1>

            {(hero.intro?.length ?? 0) > 0 ? (
              <div class="mt-4 space-y-2 text-[rgb(var(--ink)/0.82)]">
                {hero.intro.map((line) => (
                  <p class="text-[1.02rem] leading-relaxed max-w-prose">{line}</p>
                ))}
              </div>
            ) : null}
          </div>

          <aside class="rounded-2xl border border-[rgb(var(--hairline))] bg-[rgb(var(--surface-2))] px-4 py-4">
            <div class="text-xs font-mono tracking-[0.22em] text-[rgb(var(--muted))]">SIGNAL</div>
            <div class="mt-3 space-y-2">
              {(hero.eyebrow?.length ?? 0) > 0 ? (
                <ul class="space-y-2">
                  {hero.eyebrow.slice(0, 3).map((x) => (
                    <li class="flex items-start gap-2 text-sm text-[rgb(var(--muted))]">
                      <span class="mt-1.5 h-1.5 w-1.5 rounded-full bg-[rgb(var(--muted))]" aria-hidden="true" />
                      <span>{x}</span>
                    </li>
                  ))}
                </ul>
              ) : (
                <p class="text-sm text-[rgb(var(--muted))]">{meta.role}</p>
              )}
            </div>

            {(hero.previous?.length ?? 0) > 0 ? (
              <div class="mt-5 pt-4 border-t border-[rgb(var(--hairline))]">
                <div class="text-xs font-mono tracking-[0.22em] text-[rgb(var(--muted))]">PREVIOUSLY</div>
                <div class="mt-2 flex flex-wrap gap-2">
                  {hero.previous.slice(0, 6).map((c) => (
                    <span class="rounded-full bg-[rgb(var(--surface))] border border-[rgb(var(--hairline))] px-2.5 py-1 text-xs text-[rgb(var(--muted))]">
                      {c}
                    </span>
                  ))}
                </div>
              </div>
            ) : null}
          </aside>
        </div>
      </div>
    </div>
  </div>
</section>


