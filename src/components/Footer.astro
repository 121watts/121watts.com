      <div class="flex flex-col gap-1">
        {line1 ? <p class="font-medium text-[rgb(var(--ink))]">{line1}</p> : null}
        {line2 ? <p>{line2}</p> : null}
      </div>
      <p class="mt-4 font-mono text-xs tracking-[0.18em] text-[rgb(var(--muted))] uppercase">
